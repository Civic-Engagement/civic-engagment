{
  "environment": "development",
  "version": "2.0.0-dev",
  "release": "Task Management Integration - Development",
  
  "database_paths": {
    "users_db_path": "users/dev_users_db.json",
    "blockchain_db_path": "blockchain/dev_blockchain_db.json",
    "debates_db_path": "debates/dev_debates_db.json",
    "moderation_db_path": "moderation/dev_moderation_db.json",
    "contracts_db_path": "contracts/dev_contracts_db.json",
    "training_db_path": "training/dev_training_db.json",
    "crypto_db_path": "crypto/dev_crypto_db.json",
    "tasks_db_path": "tasks/dev_tasks_db.json",
    "notifications_db_path": "tasks/dev_notifications_db.json",
    "task_integration_config_path": "tasks/dev_integration_config.json",
    "analytics_db_path": "analytics/dev_analytics_db.json",
    "events_db_path": "events/dev_events_db.json",
    "communications_db_path": "communications/dev_messages_db.json",
    "surveys_db_path": "surveys/dev_surveys_db.json",
    "petitions_db_path": "petitions/dev_petitions_db.json",
    "documents_db_path": "documents/dev_documents_db.json",
    "transparency_db_path": "transparency/dev_transparency_db.json",
    "collaboration_db_path": "collaboration/dev_collaboration_db.json"
  },
  
  "security_settings": {
    "private_keys_path": "users/dev_private_keys",
    "session_timeout_minutes": 60,
    "password_min_length": 4,
    "require_special_chars": false,
    "max_login_attempts": 10,
    "lockout_duration_minutes": 5
  },
  
  "task_management": {
    "task_auto_creation": true,
    "task_notifications_enabled": true,
    "validation_auto_assignment": true,
    "voting_auto_assignment": true,
    "contract_auto_assignment": true,
    "task_expiration_enabled": false,
    "reminder_system_enabled": true,
    
    "reminder_intervals": {
      "low": 2,
      "normal": 1,
      "high": 0.5,
      "urgent": 0.25,
      "critical": 0.1
    },
    
    "validation_thresholds": {
      "city": 0.20,
      "state": 0.15,
      "country": 0.10,
      "founder": 0.05
    },
    
    "task_categories": {
      "validation": {
        "enabled": true,
        "auto_priority": "normal",
        "default_deadline_hours": 8
      },
      "voting": {
        "enabled": true,
        "auto_priority": "high",
        "default_deadline_hours": 24
      },
      "contracts": {
        "enabled": true,
        "auto_priority": "high",
        "default_deadline_hours": 48
      },
      "moderation": {
        "enabled": true,
        "auto_priority": "urgent",
        "default_deadline_hours": 2
      },
      "training": {
        "enabled": true,
        "auto_priority": "low",
        "default_deadline_hours": 72
      }
    }
  },
  
  "notification_settings": {
    "email_enabled": false,
    "sms_enabled": false,
    "push_enabled": false,
    "in_app_enabled": true,
    "quiet_hours_enabled": false,
    "quiet_start": "23:00",
    "quiet_end": "06:00",
    "batch_notifications": false,
    "max_daily_notifications": 100
  },
  
  "system_settings": {
    "debug_mode": true,
    "auto_backup": false,
    "blockchain_auto_sync": true,
    "auto_update_check": false,
    "telemetry_enabled": true,
    "crash_reporting": true,
    "performance_monitoring": true
  },
  
  "blockchain_settings": {
    "validator_rotation_enabled": false,
    "consensus_threshold": 0.51,
    "block_creation_interval": 60,
    "max_block_size": 2097152,
    "auto_validator_assignment": true,
    "backup_frequency_hours": 1
  },
  
  "ui_settings": {
    "theme": "civic_debug",
    "default_tab": "tasks",
    "show_task_counter": true,
    "show_urgent_notifications": true,
    "auto_refresh_interval": 10,
    "compact_mode": false
  },
  
  "integration_settings": {
    "cross_module_sync": true,
    "auto_task_generation": true,
    "real_time_updates": true,
    "batch_processing": false,
    "integration_retry_attempts": 5,
    "integration_timeout_seconds": 10
  },
  
  "testing_settings": {
    "mock_external_services": true,
    "generate_test_data": true,
    "enable_test_users": true,
    "fast_task_creation": true,
    "skip_blockchain_verification": false,
    "verbose_logging": true
  }
}