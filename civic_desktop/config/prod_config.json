{
  "environment": "production",
  "version": "2.0.0",
  "release": "Task Management Integration",
  
  "database_paths": {
    "users_db_path": "users/users_db.json",
    "blockchain_db_path": "blockchain/blockchain_db.json",
    "debates_db_path": "debates/debates_db.json",
    "moderation_db_path": "moderation/moderation_db.json",
    "contracts_db_path": "contracts/contracts_db.json",
    "training_db_path": "training/training_db.json",
    "crypto_db_path": "crypto/crypto_db.json",
    "tasks_db_path": "tasks/tasks_db.json",
    "notifications_db_path": "tasks/notifications_db.json",
    "task_integration_config_path": "tasks/integration_config.json",
    "analytics_db_path": "analytics/analytics_db.json",
    "events_db_path": "events/events_db.json",
    "communications_db_path": "communications/messages_db.json",
    "surveys_db_path": "surveys/surveys_db.json",
    "petitions_db_path": "petitions/petitions_db.json",
    "documents_db_path": "documents/documents_db.json",
    "transparency_db_path": "transparency/transparency_db.json",
    "collaboration_db_path": "collaboration/collaboration_db.json"
  },
  
  "security_settings": {
    "private_keys_path": "users/private_keys",
    "session_timeout_minutes": 120,
    "password_min_length": 8,
    "require_special_chars": true,
    "max_login_attempts": 5,
    "lockout_duration_minutes": 30
  },
  
  "task_management": {
    "task_auto_creation": true,
    "task_notifications_enabled": true,
    "validation_auto_assignment": true,
    "voting_auto_assignment": true,
    "contract_auto_assignment": true,
    "task_expiration_enabled": true,
    "reminder_system_enabled": true,
    
    "reminder_intervals": {
      "low": 48,
      "normal": 24,
      "high": 12,
      "urgent": 6,
      "critical": 2
    },
    
    "validation_thresholds": {
      "city": 0.33,
      "state": 0.25,
      "country": 0.20,
      "founder": 0.10
    },
    
    "task_categories": {
      "validation": {
        "enabled": true,
        "auto_priority": "normal",
        "default_deadline_hours": 72
      },
      "voting": {
        "enabled": true,
        "auto_priority": "high",
        "default_deadline_hours": 168
      },
      "contracts": {
        "enabled": true,
        "auto_priority": "high",
        "default_deadline_hours": 336
      },
      "moderation": {
        "enabled": true,
        "auto_priority": "urgent",
        "default_deadline_hours": 24
      },
      "training": {
        "enabled": true,
        "auto_priority": "low",
        "default_deadline_hours": 720
      }
    }
  },
  
  "notification_settings": {
    "email_enabled": false,
    "sms_enabled": false,
    "push_enabled": false,
    "in_app_enabled": true,
    "quiet_hours_enabled": true,
    "quiet_start": "22:00",
    "quiet_end": "07:00",
    "batch_notifications": true,
    "max_daily_notifications": 10
  },
  
  "system_settings": {
    "debug_mode": false,
    "auto_backup": true,
    "blockchain_auto_sync": true,
    "auto_update_check": true,
    "telemetry_enabled": false,
    "crash_reporting": false,
    "performance_monitoring": true
  },
  
  "blockchain_settings": {
    "validator_rotation_enabled": true,
    "consensus_threshold": 0.67,
    "block_creation_interval": 300,
    "max_block_size": 1048576,
    "auto_validator_assignment": true,
    "backup_frequency_hours": 24
  },
  
  "ui_settings": {
    "theme": "civic_light",
    "default_tab": "tasks",
    "show_task_counter": true,
    "show_urgent_notifications": true,
    "auto_refresh_interval": 30,
    "compact_mode": false
  },
  
  "integration_settings": {
    "cross_module_sync": true,
    "auto_task_generation": true,
    "real_time_updates": true,
    "batch_processing": false,
    "integration_retry_attempts": 3,
    "integration_timeout_seconds": 30
  }
}